{
  "version": 2,
  "buildCommand": "NODE_OPTIONS='--max_old_space_size=3072' npm install && npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "NODE_OPTIONS='--max_old_space_size=3072' npm install",
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max_old_space_size=3072"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "nodeVersion": "18.x"
      }
    }
  ]
} 